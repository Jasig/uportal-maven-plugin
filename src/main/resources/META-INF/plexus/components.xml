<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.Lifecycle</role>
            <implementation>org.apache.maven.lifecycle.Lifecycle</implementation>
            <role-hint>uPortalData-init</role-hint>
            <configuration>
                <id>uPortalData-init</id>
                <phases>
                    <phase>db-init</phase>
                </phases>
            </configuration>
            <!-- FIXME Could not get the mojo to execute when the phase is invoked (e.g. mvn db-init).
                 See note in uPortalDbMojo.java -->
            <default-phases>
                <db-init>
                    org.jasig.portal:uportalData-maven-plugin:1.0:dbinit
                </db-init>
            </default-phases>
        </component>
        <component>
            <role>org.apache.maven.lifecycle.Lifecycle</role>
